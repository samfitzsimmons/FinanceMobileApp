<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceMobileApp.AddExpense">
    <ContentPage.Content xmlns:local="clr-namespace:FinanceMobileApp.Models">
        <StackLayout>
            <Label Text="Enter your expense details:" />
            <DatePicker x:Name="ExpenseDate"
                    Format="D"
                    DateSelected="OnDateSelected" />
            <Entry x:Name="Expense_Name"  Placeholder="Expense Name"
                   />
            <Button x:Name="Category" Text="Select a Category " HeightRequest="40" WidthRequest="40" BorderRadius="20" 
              Clicked="Category_Clicked"
                   
                    />
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>