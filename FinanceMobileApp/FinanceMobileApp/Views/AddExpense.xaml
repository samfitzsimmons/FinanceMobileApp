<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceMobileApp.AddExpense">
    <ContentPage.Content xmlns:local="clr-namespace:FinanceMobileApp.Models">
        <StackLayout>
            <Label Text="Enter your expense details:" />
            <DatePicker x:Name="ExpenseDate"
                    Format="D"
                    DateSelected="OnDateSelected" />
            <Entry x:Name="Expense_Name"  Placeholder="Expense Name"
                   />
          
            <Picker x:Name="Expense_Category" Title="Choose Expense Category" 
                    SelectedIndexChanged="Expense_Category_SelectedIndexChanged"
                    ItemsSource="{Binding Categories}"
                    ItemDisplayBinding="{Binding CategoryName}">
            </Picker>
            <Image Source="{Binding Categories.ImageUrl}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>