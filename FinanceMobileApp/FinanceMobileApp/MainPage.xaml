<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceMobileApp.MainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Budgets" 
                     Text="Budgets" 
                     Order="Primary"
                     Clicked="Budgets_Clicked"/>
        <ToolbarItem x:Name="Expenses" 
                     Text="Expenses" 
                     Order="Primary"
                     Clicked="Expenses_Clicked"/>
        <ToolbarItem x:Name="LogoToolBar" 
                     IconImageSource="Assets/money.png" 
                     Order="Primary"/>
    </ContentPage.ToolbarItems>

    <StackLayout>
      
            <Label Text="Welcome!" />
        <Image x:Name="Logo" Source="Assets/money.png" WidthRequest="100"/>
        <Button x:Name="AddExpense" Text="Add Your Expnese"  HeightRequest="40" WidthRequest="40" BorderRadius="20"
                Clicked="AddExpense_Clicked" />

        <Button x:Name="AddBudget" Text="Add Your Budget"  HeightRequest="40" WidthRequest="40" BorderRadius="20"
                Clicked="AddBudget_Clicked" />

    </StackLayout>

</ContentPage>
